{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/types/**/*.ts",
    "src/lib/constants.ts",
    "src/lib/utils.ts",
    "src/lib/form.ts",
    "src/lib/theme.tsx",
    "src/lib/animations.ts",
    "src/lib/apiClient.ts",
    "src/lib/supabase.ts",
    "src/lib/clientViem.ts",
    "src/lib/auth-provider.tsx",
    "src/lib/polyfills.ts",
    "src/store/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
